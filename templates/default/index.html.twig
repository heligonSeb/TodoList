{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="text-center my-2">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}


    <div class="d-flex justify-content-around align-items-center">
        <a href="{{ path('task_list') }}" class="btn btn-info">
            <i class="bi bi-list-task me-1"></i>
            Consulter la liste des tâches à faire
        </a>
    {% if app.user %}
        <a href="{{ path('task_create') }}" class="btn btn-success">
            <i class="bi bi-plus-square me-1"></i>
            Créer une nouvelle tâche
        </a>
        {#        <a href="" class="btn btn-secondary">Consulter la liste des tâches terminées</a>#}
    </div>
    {% else %}
        <div class="alert alert-warning text-center" role="alert">
            Vous devez être connecté pour pouvoir créer une tache
        </div>
    {% endif %}
{% endblock %}
